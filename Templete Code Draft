        \textbf{\LARGE Invoice}\\[10pt] % Adjusted size
        \textbf{Invoice Number:} \invoiceNumber \\
        \textbf{Invoice Date:} \invoiceDate \\
        \textbf{Due Date:} \dueDate \\
        \textbf{Reference:} \reference
    \end{flushright}
\end{minipage}

\vspace{1cm}

