\documentclass{article}
\usepackage[a4paper, margin=1in, left=0.5in]{geometry}  % Adjusted left margin
\usepackage{graphicx}
\usepackage{array}
\usepackage{setspace}

% Change the font to Times New Roman
\renewcommand{\familydefault}{ptm}

% Define customer and company information
\newcommand{\customerName}{John Doe}
\newcommand{\customerPhone}{123-456-7890}
\newcommand{\customerAddress}{1234 Elm St, City, Country}
\newcommand{\customerEmail}{john.doe@example.com}

\newcommand{\companyName}{Your Company Name}
\newcommand{\companyAddress}{123 Company St, City, Country}
\newcommand{\companyPhone}{987-654-3210}
\newcommand{\companyEmail}{info@yourcompany.com}

% Define product information using a command
\newcommand{\product}[4]{%
    #1 & #2 & \$$#3$ & #4 & \$$#2 \times #3$ \\
}

\newcommand{\invoiceNumber}{12345567}
\newcommand{\invoiceDate}{\today}
\newcommand{\dueDate}{\today}
\newcommand{\reference}{ABC123}

\begin{document}
